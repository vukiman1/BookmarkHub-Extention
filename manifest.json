{
  "manifest_version": 3,
  "name": "BookmarkHub",
  "version": "1.0.0",
  "description": "Quản lý bookmark của bạn một cách dễ dàng",
  "permissions": ["bookmarks", "storage", "activeTab", "scripting", "tabs"],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; style-src 'self' 'unsafe-inline'"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "BookmarkHub"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
